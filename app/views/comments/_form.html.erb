<%= form_with(model:[ @post, @comment ], local:true) do |f| %>

    <% if @comment.errors.full_messages.each do |msg| %>
        <ul>
            <li><%= msg %>
        </ul>
    <% end; end %>

    <p>Comments:</p>
    
    <div>
        <%= f.text_area(:body,
                        cols: 50,
                        rows: 5,
                        placeholder: 'What is your comment?') %>
    </div>

    <%= f.submit 'Comment' %>

<% end %>





