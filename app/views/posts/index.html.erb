<h1>Posts Index Page</h1>
<h2>Url: '/posts/index'</h2>

<div class="d-flex align-content-start flex-wrap">
    <% @posts.each do |post| %>
        <div class='p-2 bd-highlight'>
            <h3><%= link_to post.title, post_path(post) %></h3>
            <P><%= post.body %></p>
        </div>
    <% end %>
</div>




