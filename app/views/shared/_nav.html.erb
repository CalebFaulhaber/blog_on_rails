<div class="d-flex justify-content-between outer_nav_container">
  
  <div>
    <%= link_to 'Blog On Rails', home_path, class: 'nav-item' %>
  </div>

  <div class="d-flex justify-content-end inner_nav_container">
    <div>
      <%= link_to 'Home', posts_path, class: 'nav-item' %>
    </div>
    |
    <% if user_signed_in? %>
      <div>
        <%= link_to 'New Post', new_post_path, class: 'nav-item' %>
      </div>
      |
      <div>
        Hello, 
        <%= link_to edit_user_path, method: :get do %>
          <strong><%= current_user.name %></strong>
        <% end %>
      </div>
      |
      <div>
        <%= link_to 'Log Out', 
          session_path,
          method: :delete, 
          class: 'btn btn-danger',
          data:{ confirm: 'Are you sure you want to logout?' } %>
      </div>
    <% else %>
      <div>
        <%= link_to 'Log In', 
        new_session_path,
        class: 'btn btn-success' %>
      </div>
      |
      <div>
        <%= link_to 'Sign Up', new_user_path, class: 'nav-item' %>
      </div>
    <% end %>
  </div>

</div>

